<header>
	<body>
		<h1>Editing Book</h1>
		<%= form_for(@book, url:update_book_path) do |f| %>

			<h4>Title</h4>
			<%= f.text_field :title %>
			<h4>Body</h4>
			<%= f.text_area :body %>
			<div class="submit">
				<%= f.submit 'Update Books' %>
			</div>
			<%= link_to 'show', book_path %>
			|
			<%= link_to 'back', books_path %>
		<% end %>
	</body>
</header>